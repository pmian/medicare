<div class="container mt-5">
 <h1 class="row justify-content-center align-items-center text-info">Register (for doctors)</h1>

 <div class="row justify-content-center align-items-center">
   <div class="col-sm0-3">
     <div class="card shadow border">
       <div class="card-body">

         <!-- Makes POST request to /register route -->
         <form action="/registerdoc" method="POST">
           <div class="form-group">
             <!-- <label for="email">Email</label> -->
             <input type="email" class="form-control" name="username" placeholder="Enter Email">
           </div>
           <div class="form-group">
             <!-- <label for="password">Password</label> -->
             <input type="password" class="form-control" name="password" placeholder="Enter Password">
           </div>
           <div class="form-group">
             <!-- <label for="CityLocation">CityLocation</label> -->
             <input type="CityLocation" class="form-control" name="CityLocation" placeholder="City location">
           </div>
           <!-- <div class="form-group">
             <label for="ptdr">Patient/Doctor</label>
             <input type="ptdr" class="form-control" name="ptdr">
           </div> -->
           <div class="form-group">
             <!-- <label for="Hoursperday">Hours per day</label> -->
             <input type="number" class="form-control" name="Hoursperday" placeholder="Hours per day">
           </div>
           <div class="form-group">
             <!-- <label for="Patientsperhr">Patients per hr</label> -->
             <input type="number" class="form-control" name="Patientsperhr" placeholder="Patients per hour">
           </div>
           <button type="submit" class="w-100 btn btn-lg btn-primary mt-3">Register (for doctors)</button>
         </form>

       </div>
     </div>
   </div>

