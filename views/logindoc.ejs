  <div class="row justify-content-center align-items-center">
    <div class="col-sm-3">
      <div class="card shadow border">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/logindoc" method="POST">
            <div class="form-group">
              <!-- <label for="email">Email</label> -->
              <input type="email" class="form-control" name="username" placeholder="Enter your Email" autofocus>
            </div>
            <div class="form-group">
              <!-- <label for="password">Password</label> -->
              <input type="password" class="form-control" name="password" placeholder="Enter your Password">
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary mt-3">Login (for doctors)</button>
          </form>

        </div>
      </div>
    </div>

